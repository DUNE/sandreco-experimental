{
    "ufw" : {
      "ufw-loglevel" : "debug",
      "ufw-basepath" : "/usr/local/share/sandreco/data",
      "ufw-ldpath" : ["/usr/local/lib64"]
    },
    "globals" : {
    },
    "contexts" : {
      "keys" : 2,
      "locals" : {
      }
    },
    "run" : [
      {
        "sand::root::tree_streamer" : { 
          "uri" : "test/sensors_masks.root",
          "tree" : "cameras"
        },
        "read" : { "foo" : "sand::grain::hits"}
      },
      {
        "sand::grain::detector_response_fast" : {
            "sipm_active_size": 3.0,
            "sipm_border": 0.1, 
            "seed": 1111, 
            "pde": 0.2},
        "reqs" : {"hits" : "foo"},
        "prods" : {"digi": "pippo"}
      },
      {
        "sand::root::tree_streamer" : { 
          "uri" : "test/detresp_masks.root",
          "tree" : "cameras"
        },
        "write" : { "pippo" : "sand::grain::digi"}
      }
    ]
  }
  
