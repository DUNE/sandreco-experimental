{
    "ufw" : {
      "ufw-loglevel" : "debug",
      "ufw-basepath" : "/usr/local/share/sandreco/data",
      "ufw-ldpath" : ["/usr/local/lib64"]
    },
    "globals" : {
    },
    "contexts" : {
      "keys" : 2,
      "locals" : {
      }
    },
    "run" : [
      {
        "sand::root::tree_streamer" : { 
          "uri" : "test/detresp.root",
          "tree" : "cameras"
        },
        "read" : { "digis" : "sand::grain::digi"}
      },
      {
        "sand::grain::spill_slicer" : {
            "min_response_signal": 8,
            "delta_ns_for_comparison": 1000
        },
        "reqs" : {"digi" : "digis"},
        "prods" : {"images": "imgs"}
      },
      {
        "sand::root::tree_streamer" : { 
          "uri" : "test/images.root",
          "tree" : "cameras"
        },
        "write" : { "imgs" : "sand::grain::images"}
      }
    ]
  }
  
